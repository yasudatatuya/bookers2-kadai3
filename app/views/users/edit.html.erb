<div class="body">
    <div class="container">
    <h2>User info</h2>
      <% if @user.errors.any? %>
        <ul class="red">
          <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message%></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user, local:true do |f| %>
        <div class="field">
          <label for="user_name">Name</label>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "ファイルの選択" %>
        </div>

        <div class="field">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction %>
        </div>

        <div class="actions">
          <%= f.submit 'Update User' %>
        </div>
      <% end %>
      </div>
</div>